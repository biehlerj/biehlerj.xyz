---
import MultiDate from "@components/MultiDate.astro";
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="main">
    <article class="prose text-justify">
      <h1>{frontmatter.title}</h1>
      <div>
        <MultiDate
          firstDate={frontmatter.beginDate}
          secondDate={frontmatter.endDate}
        />
      </div>
      <slot />
      <div>
        Skills:
        <br />
        {
          frontmatter.skills.sort().map((skill) => (
            <li>
              <a href={`/skills/${skill}`}>{skill}</a>
            </li>
          ))
        }
      </div>
    </article>
  </div>
</Layout>

<style>
  li {
    display: inline-block;
    padding: 1px 2px;
  }
</style>
