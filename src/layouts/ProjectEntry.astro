---
import Date from "@components/Date.astro";
import Layout from "./Layout.astro";
import BackCard from "@components/BackCard.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="main">
    <article class="prose text-justify">
      <h1>{frontmatter.title}</h1>
      <div>
        <Date date={frontmatter.date} />
      </div>
      <slot />
      <div>
        Skills:
        <br />
        {
          frontmatter.skills.sort().map((skill) => (
            <li>
              <a href={`/skills/${skill}`}>{skill}</a>
            </li>
          ))
        }
      </div>
    </article>
    <BackCard href="/projects" title="Back to Projects" />
  </div>
</Layout>

<style>
  li {
    display: inline-block;
    padding: 1px 2px;
  }
</style>
